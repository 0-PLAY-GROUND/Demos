@model English.Models.Example

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Example</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ExampleText" class="control-label"></label>
                <textarea asp-for="ExampleText" class="form-control"></textarea>
                <span asp-validation-for="ExampleText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExampleTranslation" class="control-label"></label>
                <textarea asp-for="ExampleTranslation" class="form-control"></textarea>
                <span asp-validation-for="ExampleTranslation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
